<%= simple_form_for @patient do |f| %>
    <%= f.error_notification %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :suffix %>
    <%= f.input :sex, as: :radio_buttons, collection: [ 'Male', 'Female', 'Unknown' ] %>
    <%= f.input :dob, as: :date, start_year: Date.today.year - 150, end_year: Date.today.year %>
    <%= f.input :age, input_html: { min: '0', step: 'any' } %>
    <%= f.input :race, as: :radio_buttons, collection: [ 'American Indian or Alaska Native', 'Asian', 'Black or African American', 'Native Hawaiian or Other Pacific Islander', 'White' ] %>
    <%= f.input :ethnicity, as: :radio_buttons, collection: [ 'Hispanic or Latino', 'Non Hispanic or Latino' ] %>
    <%= f.input :language %>
    <%= f.input :residence_line_1 %>
    <%= f.input :residence_line_2 %>
    <%= f.input :residence_city %>
    <%= f.input :residence_county %>
    <%= f.input :residence_state %>
    <%= f.input :residence_country, priority: [ "United States" ] %>
    <%= f.input :email %>
    <%= f.input :primary_phone %>
    <%= f.input :secondary_phone %>
    <%= f.submit "Create", class: "btn btn-primary mb-3 btn-lg btn-block" %>
<% end %>