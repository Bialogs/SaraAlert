

<%= stylesheet_link_tag "devise_authy" %>
<div class="authy-menu col-24 d-flex flex-column justify-content-center">
  <div class="row">
    <div class="col-md-15 col-lg-12 col-xl-10 mx-auto">
      <div class="pb-4">
        <%= render partial: 'devise/shared/logo' %>
      </div>
      <div class="card shadow shadow-sm card-square">
        <div class="card text-center">
        <div class="card-header">
          <h3 class="mb-0">Register For 2-Factor Authorization</h3>
        </div>
          <div class="card-body">
            <%= enable_authy_form do %>
              <%= text_field_tag :country_code, '', :autocomplete => :off, :placeholder => I18n.t('devise.country'), :id => "authy-countries"%>
              <%= text_field_tag :cellphone, '', :autocomplete => :off, :placeholder => I18n.t('devise.cellphone'), :id => "authy-cellphone", class: "form-control-sm"%>
              <%= submit_tag I18n.t('enable_authy', {:scope => 'devise'}), class: "btn-primary btn-sm"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
