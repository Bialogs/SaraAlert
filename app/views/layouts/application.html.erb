<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sara Alert</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script>
      window.BASE_PATH = "<%= ADMIN_OPTIONS['base_path'] %>";
      window.SENTRY_URL = "<%= ADMIN_OPTIONS['sentry_url'] %>";
      window.SARA_VERSION = "<%= ADMIN_OPTIONS['version'] %>";
    </script>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body id="sara-alert-body">
    <%= render 'layouts/header' %>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
