<% content_for :preheader do %>
    Welcome to the Sara Alert System!
<% end %>

<% content_for :body do %>
    <p>Dear <%= @user.email[/[^@]+/] %>,</p>

    <p>You've been added to the <%= @user.jurisdiction.name %> jurisdiction. Your initial login credentials are</p>
    <p>
      <b>Username:</b> <%= @user.email %><br/>
      <b>Temporary password:</b> <%= @password %>
    </p>
    <p>Please log in to the Sara Alert application to change your password as soon as possible.</p>

    <%= render partial: 'main_mailer/site_link_button' %>
<% end %>

<% content_for :footer do %>
    <p>This message was automatically generated by the Sara Alert system. If you wish to stop recieving these notifications or believe that it was a mistake, please contact your system administrator.</p>
<% end %>