<% content_for :preheader do %>
  Welcome to the Sara Alert System!
<% end %>

<% content_for :body do %>
  <p>Dear <%= @user.email[/[^@]+/] %>,</p>

  <p>You've been added to the <%= @user.jurisdiction.name %> jurisdiction. Your initial login credentials are:</p>
  <p>
    <b>Username:</b> <%= @user.email %><br/>
    <b>Temporary password:</b> <%= @password %>
  </p>
  <p style="margin-bottom: none">Please log in to the Sara Alert application to change your password as soon as possible.</p>

  <%= render partial: 'main_mailer/responsive_button', locals: {link: root_url , text: 'Sara Alert'} %>
<% end %>

<% content_for :footer do %>
  <p>This message was automatically generated by the Sara Alert system. If you wish to stop receiving these notifications or believe that it was a mistake, please contact the help desk.</p>
<% end %>